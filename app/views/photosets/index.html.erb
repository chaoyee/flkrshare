<div class="page header">
  <h2>Listing Flickr photosets</h2>
</div>
<div class="container">
  <div class="row">
    <div class="span12">
      <div class="well table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Photo</th>
              <th>Title</th>
              <th>Description</th>
              <th>Id</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @photosets.each do |photoset| %>
              <tr>
                <td><%= link_to image_tag(generate_image_source(true, photoset)), photos_path(id: photoset.id), method: :post %></td>
                <td><%= photoset.title %></td>
                <td><%= photoset.description %></td>
                <td><%= photoset.id %></td>
                <td><%= link_to 'Select', photos_path(id: photoset.id), method: :post, class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div> <!--! end of .container -->